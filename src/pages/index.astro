<style>
  #hero {
    display: flex;
  }

  #wave {
    position: absolute;
    display: flex;
    top: 300px;
    left: 70%;

    transform: translate(-50%, -50%);
    transform-origin: center center;
  }
</style>

<script>
  const wave: any = document.getElementById('wave');

  function lerp(start: number, end: number, t: number) {
    return start * (1 - t) + end * t;
  }

  function updateWaveSize() {
    const windowWidth = window.innerWidth;
    if (windowWidth >= 1000) {
      wave.style.width = "420px"
    } else if (windowWidth <= 700) {
      wave.style.width = "0px"
    } else {
      wave.style.width = `${lerp(0, 420, (windowWidth - 700) / (1000 - 700))}px`;
    };
  }

  updateWaveSize();
  window.addEventListener('resize', updateWaveSize);

</script>